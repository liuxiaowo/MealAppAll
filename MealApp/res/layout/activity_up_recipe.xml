<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpRecipeActivity" >
	<RelativeLayout 
	    android:id="@+id/upRecipe_top"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:background="#ffffff">
	    <ImageButton 
	        android:id="@+id/upRecipe_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back"
	        android:background="#00000000"
	        android:contentDescription="@string/upRecipe_back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/upRecipe_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/upRecipe_title"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/upRecipe_back"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/upRecipe_next"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/upRecipe_next"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
	<View
	    android:id="@+id/upRecipe_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#c6c5c5"
	    android:layout_below="@id/upRecipe_top"/>
	<RelativeLayout 
	    android:id="@+id/upRecipe_middle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/upRecipe_line">
	    <EditText
	        android:id="@+id/upRecipe_name"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:hint="@string/upRecipe_name"
	        android:padding="10dp"
	        />
	    <LinearLayout 
	        android:id="@+id/upRecipe_linear"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@id/upRecipe_name"
	        android:layout_marginTop="20dp"
	        android:orientation="horizontal">
	      <Spinner 
	            android:id="@+id/upRecipe_difficulty"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_weight="1"
	            />
	      <Spinner 
	            android:id="@+id/upRecipe_time"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_weight="1"
	            />
	    </LinearLayout>
	    <RelativeLayout
	        android:id="@+id/upRecipe_addFood"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@id/upRecipe_linear"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/upRecipe_food"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/upRecipe_food"
	            android:textSize="20sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            />
	        <ImageButton 
	            android:id="@+id/upRecipe_add_food"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/add_foodmaterital"
	            android:background="#00000000"
	            android:layout_marginRight="10dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:contentDescription="@string/upRecipe_add_food"
	           />
	      </RelativeLayout>
	       <ListView
			      android:id="@+id/upRecipe_addOneFood"
			      android:layout_width="match_parent"
			      android:layout_height="wrap_content"
			      android:layout_marginLeft="10dp"
			      android:layout_marginRight="10dp"
			      android:layout_below="@id/upRecipe_addFood">
			</ListView>
	      <EditText 
	          android:id="@+id/upRecipe_tips"
	          android:layout_width="match_parent"
	          android:layout_height="50dp"
	          android:hint="@string/upRecipe_tips"
	          android:padding="10dp"
	          android:layout_below="@id/upRecipe_addOneFood"
	          android:layout_marginTop="20dp"/>
	      <EditText
	          android:id="@+id/upRecipe_backgroundStrory"
	          android:layout_width="match_parent"
	          android:layout_height="50dp"
	          android:hint="@string/upRecipe_backgroundStrory"
	          android:layout_below="@id/upRecipe_tips"
	          android:layout_marginTop="20dp"
	          android:padding="10dp"/>
	</RelativeLayout>
</RelativeLayout>
