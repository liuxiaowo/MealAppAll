<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hot24Activity" >
	<RelativeLayout 
	    android:id="@+id/hot24_top"
	    android:layout_width="match_parent"
	    android:layout_height="55dp">
	    <ImageButton 
	        android:id="@+id/hot24_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back"
	        android:background="#00000000"
	        android:contentDescription="@string/back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/hot24_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hot24_title"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_toRightOf="@id/hot24_back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	</RelativeLayout>
 	<View
 	    android:id="@+id/hot24_line"
 	    android:layout_width="match_parent"
 	    android:layout_height="1dp"
 	    android:background="#c6c5c5"
 	    android:layout_below="@id/hot24_top"/>
 	<RelativeLayout 
 	    android:id="@+id/hot24_middle"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@id/hot24_line">
 	    <TextView
 	        android:id="@+id/hot24_all"
 	        android:layout_width="wrap_content"
 	        android:layout_height="50dp"
 	        android:text="@string/hot24_all"
 	        android:textSize="20sp"
 	        android:layout_marginLeft="10dp"
 	        android:gravity="center_vertical"
 	        />
 	   	<ListView 
 	   	    android:id="@+id/hot24_listview"
 	   	    android:layout_width="match_parent"
 	   	    android:layout_height="wrap_content"
 	   	    android:layout_below="@id/hot24_all">
 	   	</ListView>
 	   	<TextView
 	   	    android:id="@+id/hot24_end"
 	   	    android:layout_width="wrap_content"
 	   	    android:layout_height="wrap_content"
 	   	    android:layout_below="@id/hot24_listview"
 	   	    android:text="@string/hot24_end"
 	   	    android:textSize="14sp"
 	   	    android:layout_centerHorizontal="true"
 	   	    android:textColor="#989696"/>
 	</RelativeLayout>
 	<RelativeLayout 
 	    android:id="@+id/hot24_upPic_bg"
 	    android:layout_width="match_parent"
 	    android:layout_height="60dp"
 	    android:layout_alignParentBottom="true"
 	    android:background="#ffffff">
 	 <LinearLayout 
 	     android:id="@+id/hot24_upPic_linear"
 	     android:layout_width="match_parent"
 	     android:layout_height="50dp"
 	     android:orientation="horizontal"
 	     android:background="#ff5a60"
 	     android:gravity="center_horizontal"
 	     android:layout_margin="10dp">
	<LinearLayout
 	         android:layout_width="wrap_content"
 	         android:layout_height="50dp"
 	         android:layout_gravity="center_vertical"
 	         android:orientation="horizontal" >
 	 <ImageView
 	     android:id="@+id/hot24_upPic_pic"
 	     android:layout_width="0dp"
 	     android:layout_height="wrap_content"
 	     android:src="@drawable/photo"
 	     android:background="#00000000"
 	     android:layout_weight="1"
 	     android:contentDescription="@string/hot24_upPic_pic"
 	     android:layout_gravity="center_vertical"/>
 	 <TextView
 	    android:id="@+id/hot24_upPic"
 	    android:layout_width="0dp"
 	    android:layout_height="wrap_content"
 	    android:text="@string/hot24_upPic"
 	    android:textSize="14sp"
 	    android:textColor="#ffffff"
 	    android:layout_weight="5"
 	    android:layout_margin="10dp"
 	    android:layout_gravity="center_vertical"
 	    />
 	 </LinearLayout>
 	 </LinearLayout>
 	</RelativeLayout>
</RelativeLayout>
