<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductionStepsActivity" >
    <RelativeLayout 
        android:id="@+id/proSteps_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
 		android:background="#ffffff">
        <ImageButton 
            android:id="@+id/proSteps_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="#00000000"
            android:contentDescription="@string/proSteps_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/proSteps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proSteps_title"
            android:textSize="20sp"
            android:textColor="#ff5a60"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/proSteps_back"
            android:layout_marginLeft="10dp"/>
        <TextView 
            android:id="@+id/proSteps_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proSteps_next"
            android:textSize="20sp"
            android:textColor="#ff5a60"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/proSteps_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c6c5c5"
        android:layout_below="@id/proSteps_top"/>
    <RelativeLayout 
        android:id="@+id/proSteps_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proSteps_line">
        <GridView 
            android:id="@+id/proSteps_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="20dp"
            android:layout_margin="10dp">
        </GridView>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/proSteps_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#ff5a60"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <LinearLayout 
            android:id="@+id/proSteps_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_steps"
                android:contentDescription="@string/proSteps_add"
                android:layout_gravity="center_vertical"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proSteps_add_word"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"/>
        </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>
