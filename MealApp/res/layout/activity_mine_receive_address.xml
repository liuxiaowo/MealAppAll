<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MineReceiveAddressActivity"
    android:background="#f4f1f1">
	<RelativeLayout 
	    android:id="@+id/mineAddress_top"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:background="#ffffff">
	    <ImageButton
	        android:id="@+id/mineAddress_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back"
	        android:background="#00000000"
	        android:contentDescription="@string/back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/mineAddress_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mineAddress_title"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_toRightOf="@id/mineAddress_back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/mineAddress_manager"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mineAddress_manager"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
	<View
	    android:id="@+id/mineAddress_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_below="@id/mineAddress_top"
	    android:background="#c6c5c5"/>
	<ListView 
	    android:id="@+id/mineAddress_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mineAddress_line"
	    android:layout_marginTop="10dp"/>
	<RelativeLayout 
	    android:id="@+id/mineAddress_add"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:background="#ffffff"
	    android:gravity="center_horizontal">
	    <ImageView 
	        android:id="@+id/mineAddress_addbtn"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:background="@drawable/add"
	        android:layout_centerVertical="true"
	        android:contentDescription="@string/mineAddress_addbtn"/>
	    <TextView 
	        android:id="@+id/mineAddress_addWord"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mineAddress_addWord"
	        android:textSize="16sp"
	        android:layout_toRightOf="@id/mineAddress_addbtn"
	        android:layout_marginLeft="5dp"
	        android:layout_centerVertical="true"
	        />
	</RelativeLayout>
</RelativeLayout>
