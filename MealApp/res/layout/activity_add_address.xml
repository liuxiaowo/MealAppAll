<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddressActivity"
    android:background="#f4f1f1" >
	<RelativeLayout 
	    android:id="@+id/addAddress_top"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:background="#ffffff">
	    <ImageButton 
	        android:id="@+id/addAddress_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/back"
	        android:background="#00000000"
	        android:contentDescription="@string/back"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="10dp"/>
	    <TextView
	        android:id="@+id/addAddress_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/addAddress_title"
	        android:textSize="20sp"
	        android:textColor="#ff5a60"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/addAddress_back"
	        android:layout_marginLeft="10dp"/>
	    <ImageButton 
	        android:id="@+id/addAddress_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ok"
	        android:background="#00000000"
	        android:contentDescription="@string/ok"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"/>
	</RelativeLayout>
   <View
       android:id="@+id/addAddress_line"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#c6c5c5"
       android:layout_below="@id/addAddress_top"/>
	<TextView 
	    android:id="@+id/addAddress_contact"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:text="@string/addAddress_contact"
	    android:layout_below="@id/addAddress_line"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:textSize="20sp"/>
	<View
       android:id="@+id/addAddress_line2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#c6c5c5"
       android:layout_below="@id/addAddress_contact"/>
	<RelativeLayout 
	    android:id="@+id/addAddress_relative"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/addAddress_contact"
	    android:background="#ffffff">
	    <LinearLayout 
	        android:id="@+id/addAddress_linear1"
	        android:layout_width="match_parent"
	        android:layout_height="55dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp">
	        <TextView
	            android:id="@+id/addAddress_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/addAddress_name"
	            android:layout_gravity="center_vertical"
	            android:textSize="16sp"/>
	        <EditText 
	            android:id="@+id/addAddress_nameEdit"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:layout_marginLeft="10dp"
	            android:hint="@string/addAddress_nameEdit"/>
	    </LinearLayout>
	    <View
       		android:id="@+id/addAddress_line3"
       		android:layout_width="match_parent"
       		android:layout_height="1dp"
      		android:background="#f4f1f1"
       		android:layout_below="@id/addAddress_linear1"/>
	    <RadioGroup 
        	android:id="@+id/addAddress_sex"
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:layout_below="@id/addAddress_line3"
        	android:orientation="horizontal"
        	android:background="#ffffff"
        	android:gravity="center">
        	<RadioButton 
            	android:id="@+id/male"
            	android:text="@string/addAddress_male"
            	android:textColor="#000000"
            	android:checked="true"
            	/>
        	<RadioButton 
            	android:id="@+id/female"
            	android:textColor="#000000"
            	android:text="@string/addAddress_female"/>
   		</RadioGroup>
   		<View
       		android:id="@+id/addAddress_line4"
       		android:layout_width="match_parent"
       		android:layout_height="1dp"
      		android:background="#f4f1f1"
       		android:layout_below="@id/addAddress_sex"/>
   		 <LinearLayout 
	        android:id="@+id/addAddress_linear2"
	        android:layout_width="match_parent"
	        android:layout_height="55dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_below="@id/addAddress_line4">
	        <TextView
	            android:id="@+id/addAddress_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/addAddress_phone"
	            android:layout_gravity="center_vertical"
	            android:textSize="16sp"/>
	        <EditText 
	            android:id="@+id/addAddress_phoneEdit"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:layout_marginLeft="10dp"
	            android:inputType="phone"
	            android:hint="@string/addAddress_phoneEdit"/>
	    </LinearLayout>
	</RelativeLayout>
	<TextView 
	    android:id="@+id/addAddress_address"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:text="@string/addAddress_address"
	    android:layout_below="@id/addAddress_relative"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:textSize="20sp"/>
	<RelativeLayout 
	    android:id="@+id/addAddress_relative2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:layout_below="@id/addAddress_address">
   		 <LinearLayout 
   		     android:id="@+id/addAddress_rough"
   		     android:layout_width="match_parent"
   		     android:layout_height="50dp"
   		     android:orientation="horizontal"
   		     android:layout_marginLeft="10dp"
   		     android:layout_marginRight="10dp">
	        <TextView
	            android:id="@+id/addAddress_rough_tv"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:text="@string/addAddress_rough_tv"
	            android:layout_weight="4"
	            android:textSize="16sp"
	            android:layout_gravity="center_vertical"
	            />
	        <EditText 
	             android:id="@+id/addAddress_rough_edit"
	             android:layout_width="0dp"
	             android:layout_height="wrap_content"
	             android:layout_weight="10"
	             android:background="@null"
	             android:layout_gravity="center_vertical"
	             android:hint="@string/addAddress_rough_edit"/>
	        <ImageView 
	            android:id="@+id/addAddress_rough_img"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/address"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:layout_marginRight="10dp"
	            android:contentDescription="@string/addAddress_rough_img"/>
   		 </LinearLayout>
   		 <View
       		android:id="@+id/addAddress_line5"
       		android:layout_width="match_parent"
       		android:layout_height="1dp"
      		android:background="#f4f1f1"
       		android:layout_below="@id/addAddress_rough"/>
   		 <LinearLayout 
   		     android:id="@+id/addAddress_detail"
   		     android:layout_width="match_parent"
   		     android:layout_height="50dp"
   		     android:orientation="horizontal"
   		     android:layout_marginLeft="10dp"
   		     android:layout_marginRight="10dp"
   		     android:layout_below="@id/addAddress_line5">
   		     <TextView
   		         android:id="@+id/addAddress_detail_tv"
   		         android:layout_width="wrap_content"
   		         android:layout_height="wrap_content"
   		         android:textSize="16sp"
   		         android:layout_gravity="center_vertical"
   		         android:text="@string/addAddress_detail_tv"
   		         />
   		     <EditText 
   		         android:id="@+id/addAddress_detail_edit"
   		         android:layout_width="match_parent"
   		         android:layout_height="wrap_content"
   		         android:layout_marginLeft="10dp"
   		         android:hint="@string/addAddress_detail_edit"
   		         android:background="@null"
   		         android:layout_gravity="center_vertical"/>
   		 </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
