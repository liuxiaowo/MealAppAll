<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreRecipeActivity" >
    <RelativeLayout 
        android:id="@+id/preRecipe_top"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/preRecipe_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="#00000000"
            android:contentDescription="@string/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/preRecipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preRecipe_title"
            android:textSize="20sp"
            android:textColor="#ff5a60"
            android:layout_toRightOf="@id/preRecipe_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
	<View
	    android:id="@+id/preRecipe_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#c6c5c5"
	    android:layout_below="@id/preRecipe_top"/>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/preRecipe_line"
	    android:layout_marginBottom="20dp">
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	<ImageView 
	    android:id="@+id/preRecipe_img_all"
	    android:layout_width="match_parent"
	    android:layout_height="300dp"
	    android:background="@drawable/back"
	    android:layout_margin="10dp"
	    android:scaleType="fitXY"
	    android:contentDescription="@string/preRecipe_img_all"/>
	 <RelativeLayout 
	     android:id="@+id/preRecipe_second"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@id/preRecipe_img_all"
	     android:layout_margin="10dp">
	     <TextView
	         android:id="@+id/preRecipe_foodName"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/preRecipe_foodName"
	         android:textSize="24sp"
	         />
	   		<ImageView
	             android:id="@+id/preRecipe_userPic"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/back"
	             android:contentDescription="@string/preRecipe_userPic"
	             android:layout_below="@id/preRecipe_foodName"/>
	         <TextView
	             android:id="@+id/preRecipe_userName"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_userName"
	             android:textSize="16sp"
	             android:layout_marginLeft="10dp"
	             android:layout_toRightOf="@id/preRecipe_userPic"
	             android:layout_below="@id/preRecipe_foodName"
	             />
	 </RelativeLayout>
	 <View
	     android:id="@+id/preRecipe_line2"
	     android:layout_width="match_parent"
	     android:layout_height="1dp"
	     android:background="#f4f1f1"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:layout_below="@id/preRecipe_second"/>
	 <RelativeLayout 
	     android:id="@+id/preRecipe_threeth"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@id/preRecipe_second"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:layout_marginTop="20dp">
	     <LinearLayout 
	         android:id="@+id/preRecipe_linear_first"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal">
	         <ImageView 
	             android:id="@+id/preRecipe_material"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:contentDescription="@id/preRecipe_material"
	             android:background="@drawable/material"/>
	         <TextView
	             android:id="@+id/preRecipe_tv"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_tv"
	             android:textSize="18sp"
	             android:layout_marginLeft="10dp"
	            />
	     </LinearLayout>
	     <ListView 
	         android:id="@+id/preRecipe_listview"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_margin="10dp"
	         android:background="#c6c5c5"
	         android:layout_below="@id/preRecipe_linear_first">
	     </ListView>
	 </RelativeLayout>
	 <RelativeLayout 
	     android:id="@+id/preRecipe_fourth"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@id/preRecipe_threeth"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:layout_marginTop="20dp">
	     <LinearLayout 
	         android:id="@+id/preRecipe_linear_second"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal">
	         <ImageView 
	             android:id="@+id/preRecipe_make"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:contentDescription="@id/preRecipe_make"
	             android:background="@drawable/making_num"/>
	         <TextView
	             android:id="@+id/preRecipe_tv_make"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_tv_make"
	             android:textSize="18sp"
	             android:layout_marginLeft="10dp"/>
	         <TextView
	             android:id="@+id/preRecipe_tv_num"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_tv_num"
	             android:textSize="16sp"
	             android:layout_marginLeft="10dp"/>
	     </LinearLayout>
	     <ImageView 
	    	android:id="@+id/preRecipe_img_make1"
	    	android:layout_width="match_parent"
	    	android:layout_height="300dp"
	    	android:background="@drawable/back"
	    	android:layout_margin="10dp"
	    	android:scaleType="fitXY"
	    	android:layout_below="@id/preRecipe_linear_second"
	    	android:contentDescription="@string/preRecipe_img_make1"/>
	     <LinearLayout 
	         android:id="@+id/preRecipe_linear_three"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:layout_below="@id/preRecipe_img_make1">
	         <TextView 
	             android:id="@+id/preRecipe_num_make"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_num_make"
	             android:textSize="24sp"/>
	          <TextView 
	             android:id="@+id/preRecipe_making"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="@string/preRecipe_making"
	             android:textSize="16sp"/>
	     </LinearLayout>
	 </RelativeLayout>
	 <Button
	     android:id="@+id/preRecipe_up"
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_margin="40dp"
	     android:background="#ff5a60"
	     android:text="@string/preRecipe_up"
	     android:textSize="16sp"
	     android:gravity="center"
	     android:textColor="#ffffff"
	     android:layout_below="@id/preRecipe_fourth"/>
	 </RelativeLayout>
	</ScrollView>
</RelativeLayout>
